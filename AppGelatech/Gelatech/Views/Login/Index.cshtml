@model Infrastructure.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .login,
    .image {
        min-height: 100vh;
    }

    .bg-image {
        background-image: url('https://wallpaperaccess.com/full/3759117.jpg');
        background-size: cover;
        background-position: center center;
    }

    .signin{
        width: 100%;
        background-color: darkred;
        outline: none !important;
        color: white;
    }
</style>

@using (Html.BeginForm("Login", "Login"))
{
    @Html.AntiForgeryToken()
    if (TempData["Login"] != null)
    {
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <script>swal("Datos Incorrectos!", "", "warning");</script>
    }
    <div class="container-fluid">
        <div class="row no-gutter">
            <div class="col-md-6 d-none d-md-flex bg-image"></div>
            <div class="col-md-6 bg-light">
                <div class="login d-flex align-items-center py-5">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-10 col-xl-7 mx-auto">
                                <h3 class="display-4">GELATECH</h3>
                                <br />
                                <form>
                                    <div class="form-group mb-3">
                                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { 
                                            @class = "form-control rounded-pill border-0 shadow-sm px-4", @placeholder = "Username" } 
                                        })
                                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mb-3">
                                        @Html.PasswordFor(model => model.Password, new { 
                                            @class = "form-control rounded-pill border-0 shadow-sm px-4 text-primary", @placeholder = "Password" 
                                        })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                    <button type="submit" class="signin btn btn-block text-uppercase mb-2 rounded-pill shadow-sm">Log in</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}